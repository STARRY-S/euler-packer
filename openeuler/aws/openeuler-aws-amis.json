{
    "variables": {
        "version": "{{env `OPENEULER_VERSION`}}",
        "build": "{{env `AWS_IMAGE_BUILD_NUMBER`}}",
        "arch": "{{env `OPENEULER_ARCH`}}",
        "ami_id": "{{env `AWS_BASE_AMI`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "name": "amazon-ebs-hvm",
            "region": "ap-northeast-1",
            "ami_regions": [
                "ap-northeast-1",
                "ca-central-1"
            ],
            "source_ami": "{{user `ami_id`}}",
            "source_ami_filter": {
                "owners": ["852061510766"]
            },
            "instance_type": "t3a.micro",
            "ssh_username": "root",
            "ssh_password": "openEuler12#$",
            "ami_name": "openEuler-{{user `version`}}-hvm-{{user `build`}}",
            "ena_support": "true"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "VERSION={{user `version`}}",
                "ARCH={{user `arch`}}"
            ],
            "script": "../../scripts/openeuler-install-cloudinit"
        }
    ]
}
